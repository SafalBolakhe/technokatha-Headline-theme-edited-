<style>
  @media (min-width: 1024px) {
    .post-card
      {
      background-color:#ffd574; 
      padding:20px; 
      border-radius: 5px;
      margin: 40px;
      }
      .gh-main
      {
      width: 100%;
      margin: 0 auto;
      max-width: 1200px;
      }
      .column
      {
        float: left;
        width: 25%;
        padding: 0 10px;
      }
      .row {
        margin: 0 -5px;
      }
      .row:after {
        content: " ";
        display: table;
        clear: both;
      }
  }
  @media (max-width: 767px) {
    .post-card
      {
      background-color:#ffd574; 
      padding:20px; 
      border-radius: 5px;
      margin: 20px;
      }
      .column {
        width: 100%;
        display: block;
        margin-bottom: 20px;
  }
  @media (min-width: 768px) and (max-width: 1023px) {
    .post-card
      {
      background-color:#ffd574; 
      padding:20px; 
      border-radius: 5px;
      }
  }
</style>

{{!< default}}

<main class="gh-main gh-outer">
    <div class="gh-inner">


{{#post}}
    <div class="spacer" style="margin-bottom: 30px;"></div>


<main id="site-main" class="site-main outer" role="main">
  <div class="inner">
    <header class="post-full-header">
      <h1 class="post-full-title" style="text-align: middle; "> {{title}}</h1>
    </header>
    <div class="spacer" style="margin-bottom: 30px;"></div>
    {{#get 'authors' limit='all' include='count.posts' order='count.posts desc'}}
      <div class="post-feed" style="padding:20px; margin: 10px;">
        <div class="row"></div>
        {{#foreach authors}}
        <div class="column">
          <article class="post-card {{#unless profile_image}} no-image{{/unless}}" >
          <a href="{{url}}">

          <figure class="gh-author-image">
            {{#if profile_image}}
            <img src="{{profile_image}}" alt="{{name}}'s image">
            {{else}}
            <div class="gh-author-icon">{{> icons/avatar}}</div>
            {{/if}}
            </figure>
            <div class="post-card-content">
              <a class="post-card-content-link" href="{{url}}">
                <header class="post-card-header">
                  <h2 class="post-card-title">{{name}}</h2>
                </header>
                <section class="post-card-excerpt">
                  <p>{{bio}}</p>
                </section>
              </a>
